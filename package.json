{
  "name": "ubexgo-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "UbexGo Monorepo - Shared configurations and scripts",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lint:admin": "cd apps/admin && npm run lint",
    "lint:api": "cd apps/api && npm run lint",
    "lint:driver": "cd apps/driver-app && npm run lint",
    "lint:user": "cd apps/user-app && npm run lint"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "prettier": "^3.3.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  }
}

